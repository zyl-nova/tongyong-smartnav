.detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
}
.detail-header {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.detail-type {
  background-color: #eee;
  border-radius: 20rpx;
  color: #666;
  font-size: 28rpx;
  padding: 6rpx 15rpx;
}
.detail-time {
  color: #999;
  font-size: 26rpx;
}
.detail-content {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}
.detail-title {
  color: #333;
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.detail-text {
  color: #666;
  font-size: 30rpx;
  line-height: 1.6;
}
