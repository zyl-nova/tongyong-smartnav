/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 0;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx 32rpx 100rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.header-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -60rpx;
  padding: 0 24rpx 40rpx;
}

/* 表单区块 */
.form-section {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.section-header {
  align-items: center;
  display: flex;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-item.half {
  flex: 1;
}

.label {
  color: #666;
  display: block;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.input {
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
  height: 88rpx;
  padding: 0 24rpx;
  transition: border-color 0.3s;
  width: 100%;
}

.input:focus {
  border-color: #1890ff;
}

.picker {
  width: 100%;
}

.picker-value {
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  display: flex;
  height: 88rpx;
  justify-content: space-between;
  padding: 0 24rpx;
}

.picker-text {
  color: #333;
  font-size: 28rpx;
}

.picker-text.placeholder {
  color: #bbb;
}

.picker-arrow {
  color: #ccc;
  font-size: 20rpx;
}

.textarea {
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 180rpx;
  line-height: 1.6;
  padding: 20rpx 24rpx;
  width: 100%;
}

/* 路线输入组 */
.route-input-group {
  display: flex;
}

.route-markers {
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  padding-top: 30rpx;
}

.marker {
  align-items: center;
  border-radius: 50%;
  color: #fff;
  display: flex;
  font-size: 20rpx;
  font-weight: 600;
  height: 36rpx;
  justify-content: center;
  width: 36rpx;
}

.marker.start {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.marker.end {
  background: linear-gradient(135deg, #f5222d 0%, #ff4d4f 100%);
}

.marker-line {
  background: linear-gradient(180deg, #52c41a, #1890ff, #f5222d);
  height: 80rpx;
  margin: 8rpx 0;
  width: 4rpx;
}

.route-inputs {
  flex: 1;
}

.form-item.route-item {
  margin-bottom: 16rpx;
}

/* 搜索结果 */
.search-results {
  background: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  left: 0;
  margin-top: 8rpx;
  max-height: 300rpx;
  overflow-y: auto;
  position: absolute;
  right: 0;
  z-index: 100;
}

.result-item {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  padding: 20rpx;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f5f5f5;
}

.result-icon {
  height: 36rpx;
  margin-right: 16rpx;
  width: 36rpx;
}

.result-text {
  flex: 1;
}

.result-title {
  color: #333;
  display: block;
  font-size: 26rpx;
}

.result-address {
  color: #999;
  display: block;
  font-size: 22rpx;
  margin-top: 4rpx;
}

/* 地图容器 */
.map-container {
  border-radius: 16rpx;
  height: 400rpx;
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
}

.map {
  height: 100%;
  width: 100%;
}

.map-overlay {
  align-items: center;
  background: linear-gradient(135deg, #f0f7ff 0%, #e6f4ff 100%);
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 5;
}

.loading-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.map-overlay text {
  color: #666;
  font-size: 26rpx;
}

/* 路线信息 */
.route-info {
  align-items: center;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.95) 0%, rgba(54, 207, 201, 0.95) 100%);
  bottom: 0;
  display: flex;
  justify-content: center;
  left: 0;
  padding: 16rpx 0;
  position: absolute;
  right: 0;
  z-index: 10;
}

.route-info-item {
  align-items: center;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

.route-info-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
  margin-bottom: 4rpx;
}

.route-info-value {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

.route-info-divider {
  background: rgba(255, 255, 255, 0.3);
  height: 40rpx;
  width: 1rpx;
}

/* 提交按钮 */
.submit-btn {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border: none;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  color: #fff;
  display: flex;
  font-size: 32rpx;
  font-weight: 500;
  height: 96rpx;
  justify-content: center;
  margin-top: 20rpx;
}

.submit-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}

/* 错误提示 */
.error-text {
  color: #f5222d;
  font-size: 24rpx;
  margin-top: 8rpx;
}
