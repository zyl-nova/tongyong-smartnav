/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx 32rpx 100rpx;
}

/* 车辆主卡片 */
.vehicle-main-card {
  align-items: center;
  display: flex;
  flex-direction: column;
}

.plate-number {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 12rpx;
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
  padding: 16rpx 40rpx;
}

.vehicle-type-tag {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  padding: 8rpx 24rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -40rpx;
  padding: 0 24rpx 40rpx;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.card-header {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
}

.card-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.card-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
}

.info-item {
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.info-label {
  color: #999;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
}

.info-value.warning {
  color: #faad14;
  font-weight: 500;
}

.info-value.link {
  color: #1890ff;
}

/* 颜色值 */
.color-value {
  align-items: center;
  display: flex;
}

.color-dot {
  border-radius: 50%;
  height: 24rpx;
  margin-right: 12rpx;
  width: 24rpx;
}

.color-value text {
  color: #333;
  font-size: 28rpx;
}

/* 危险品标签 */
.danger-tag {
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
  border: 1rpx solid #ffa39e;
  border-radius: 8rpx;
  color: #f5222d;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
}

/* 更新按钮 */
.update-btn {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 44rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  color: #fff;
  display: flex;
  font-size: 32rpx;
  font-weight: 500;
  height: 96rpx;
  justify-content: center;
  margin-top: 20rpx;
}

.update-btn::after {
  border: none;
}
