.bind-container {
  padding: 30rpx;
}
.form-item {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 40rpx;
  padding: 24rpx 30rpx;
}
.label {
  display: block;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.label,
.picker,
input {
  color: #333;
  font-size: 30rpx;
}
.picker,
input {
  border-bottom: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding-bottom: 10rpx;
  width: 100%;
}
.picker {
  color: #666;
}
.submit-btn {
  align-items: center;
  background: #1a73e8;
  border-radius: 50rpx;
  color: #fff;
  display: -webkit-flex;
  display: flex;
  font-size: 34rpx;
  height: 90rpx;
  justify-content: center;
  line-height: 90rpx;
  margin-top: 60rpx;
}
