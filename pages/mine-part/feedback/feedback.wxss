/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx 32rpx 100rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.header-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -60rpx;
  padding: 0 24rpx 40rpx;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.card-header {
  align-items: center;
  display: flex;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.card-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

.card-hint {
  color: #999;
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 选择器 */
.picker-box {
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  display: flex;
  height: 88rpx;
  justify-content: space-between;
  padding: 0 24rpx;
}

.picker-text {
  color: #333;
  font-size: 28rpx;
}

.picker-text.placeholder {
  color: #bbb;
}

.picker-arrow {
  color: #ccc;
  font-size: 20rpx;
}

/* 文本域 */
.textarea-wrap {
  position: relative;
}

.content-textarea {
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 240rpx;
  line-height: 1.6;
  padding: 20rpx 24rpx;
  width: 100%;
}

.char-count {
  bottom: 16rpx;
  color: #bbb;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  border-radius: 12rpx;
  height: 200rpx;
  overflow: hidden;
  position: relative;
  width: 200rpx;
}

.uploaded-image {
  height: 100%;
  width: 100%;
}

.delete-btn {
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  border-bottom-left-radius: 12rpx;
  color: #fff;
  display: flex;
  font-size: 32rpx;
  height: 48rpx;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
  width: 48rpx;
}

.add-image {
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  height: 200rpx;
  justify-content: center;
  width: 200rpx;
}

.add-image:active {
  background: #f0f0f0;
}

.add-icon {
  color: #bbb;
  font-size: 56rpx;
  line-height: 1;
  margin-bottom: 8rpx;
}

.add-text {
  color: #999;
  font-size: 24rpx;
}

/* 联系输入框 */
.contact-input {
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  height: 88rpx;
  padding: 0 24rpx;
}

/* 提交按钮 */
.submit-btn {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 44rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  color: #fff;
  display: flex;
  font-size: 32rpx;
  font-weight: 500;
  height: 96rpx;
  justify-content: center;
  margin-top: 20rpx;
}

.submit-btn::after {
  border: none;
}

/* 底部提示 */
.footer-tips {
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.footer-tips text {
  color: #bbb;
  font-size: 24rpx;
  line-height: 1.8;
}
