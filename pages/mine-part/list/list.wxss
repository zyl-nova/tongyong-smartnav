.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}
.header {
  align-items: center;
  background-color: #fff;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.header .title {
  color: #333;
  font-size: 40rpx;
  font-weight: 700;
}
.new-btn {
  background-color: #1a73e8;
  border-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
}
.new-btn::after {
  border: none;
}
.filter-tabs {
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  display: -webkit-flex;
  display: flex;
  padding: 0 30rpx;
}
.tab {
  color: #666;
  font-size: 30rpx;
  margin-right: 50rpx;
  padding: 20rpx 0;
  position: relative;
}
.tab.active {
  color: #1a73e8;
  font-weight: 700;
}
.tab.active::after {
  background-color: #1a73e8;
  border-radius: 3rpx;
  bottom: 0;
  content: "";
  height: 6rpx;
  left: 0;
  position: absolute;
  right: 0;
}
.appointment-list {
  height: calc(100vh - 200rpx);
  padding: 20rpx 30rpx;
}
.appointment-item {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  padding: 30rpx;
}
.item-header {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.plate {
  color: #333;
  font-size: 34rpx;
  font-weight: 700;
}
.status {
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 6rpx 15rpx;
}
.status.pending {
  background-color: #fff3e0;
  color: #ff6d00;
}
.status.approved {
  background-color: #e8f5e9;
  color: #2e7d32;
}
.status.rejected {
  background-color: #ffebee;
  color: #c62828;
}
.status.completed {
  background-color: #e3f2fd;
  color: #1565c0;
}
.item-content {
  padding-left: 10rpx;
}
.info-row {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 20rpx;
}
.icon {
  height: 36rpx;
  margin-right: 15rpx;
  width: 36rpx;
}
.text {
  color: #666;
  flex: 1;
  font-size: 28rpx;
}
.empty-tip {
  align-items: center;
  color: #999;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  height: 300rpx;
  justify-content: center;
}
.empty-icon {
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
  width: 120rpx;
}
