<!--pages/mine-part/about/about.wxml-->
<view class="container">
  <!-- 顶部Logo区域 -->
  <view class="header-section">
    <view class="logo-wrap">
      <image class="logo" src="/images/mine/about/logo.jpg" mode="aspectFit" />
    </view>
    <text class="app-name">危险品运输监控平台</text>
    <text class="version">版本 {{version || '1.0.0'}}</text>
  </view>

  <view class="content-area">
    <!-- 关于我们 -->
    <view class="about-card">
      <view class="card-header">
        <text class="card-icon">📖</text>
        <text class="card-title">关于我们</text>
      </view>
      <text class="about-content">危险品运输监控平台致力于为危险品运输行业提供专业、安全、高效的智能化管理解决方案，保障运输安全，提升管理效率。</text>
    </view>

    <!-- 主要功能 -->
    <view class="about-card">
      <view class="card-header">
        <text class="card-icon">⭐</text>
        <text class="card-title">主要功能</text>
      </view>
      <view class="feature-list">
        <view class="feature-item">
          <view class="feature-icon blue">🗺️</view>
          <text class="feature-text">智能路线规划与导航</text>
        </view>
        <view class="feature-item">
          <view class="feature-icon green">📍</view>
          <text class="feature-text">实时位置追踪与监控</text>
        </view>
        <view class="feature-item">
          <view class="feature-icon orange">📅</view>
          <text class="feature-text">预约管理与调度</text>
        </view>
        <view class="feature-item">
          <view class="feature-icon red">⚠️</view>
          <text class="feature-text">违规预警与记录</text>
        </view>
        <view class="feature-item">
          <view class="feature-icon purple">🆘</view>
          <text class="feature-text">紧急救援一键呼叫</text>
        </view>
      </view>
    </view>

    <!-- 联系我们 -->
    <view class="about-card">
      <view class="card-header">
        <text class="card-icon">📞</text>
        <text class="card-title">联系我们</text>
      </view>
      <view class="contact-list">
        <view class="contact-item" bindtap="callCustomerService">
          <view class="contact-icon phone">📱</view>
          <view class="contact-info">
            <text class="contact-label">客服热线</text>
            <text class="contact-value">400-123-4567</text>
          </view>
          <text class="contact-arrow">></text>
        </view>
        <view class="contact-item" bindtap="copyWechat">
          <view class="contact-icon wechat">💬</view>
          <view class="contact-info">
            <text class="contact-label">微信公众号</text>
            <text class="contact-value">危险品运输平台</text>
          </view>
          <text class="contact-arrow">></text>
        </view>
        <view class="contact-item" bindtap="navigateToFeedback">
          <view class="contact-icon feedback">✏️</view>
          <view class="contact-info">
            <text class="contact-label">意见反馈</text>
            <text class="contact-value">提交您的建议</text>
          </view>
          <text class="contact-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 版权信息 -->
    <view class="copyright">
      <text class="copyright-text">© 2024 危险品运输监控平台</text>
      <text class="copyright-text">版权所有 保留所有权利</text>
    </view>
  </view>
</view>
