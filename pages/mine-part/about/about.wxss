/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部Logo区域 */
.header-section {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  display: flex;
  flex-direction: column;
  padding: 60rpx 32rpx 100rpx;
}

.logo-wrap {
  align-items: center;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  height: 160rpx;
  justify-content: center;
  margin-bottom: 24rpx;
  width: 160rpx;
}

.logo {
  border-radius: 24rpx;
  height: 140rpx;
  width: 140rpx;
}

.app-name {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.version {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -60rpx;
  padding: 0 24rpx 40rpx;
}

/* 关于卡片 */
.about-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.card-header {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
}

.card-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.card-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

.about-content {
  color: #666;
  font-size: 28rpx;
  line-height: 1.8;
}

/* 功能列表 */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  display: flex;
  padding: 20rpx;
}

.feature-icon {
  align-items: center;
  border-radius: 12rpx;
  display: flex;
  font-size: 28rpx;
  height: 56rpx;
  justify-content: center;
  margin-right: 16rpx;
  width: 56rpx;
}

.feature-icon.blue {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
}

.feature-icon.green {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
}

.feature-icon.orange {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
}

.feature-icon.red {
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
}

.feature-icon.purple {
  background: linear-gradient(135deg, #f9f0ff 0%, #efdbff 100%);
}

.feature-text {
  color: #333;
  font-size: 28rpx;
}

/* 联系列表 */
.contact-list {
  display: flex;
  flex-direction: column;
}

.contact-item {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  padding: 20rpx 0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background: #f8f9fa;
  margin: 0 -24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.contact-icon {
  align-items: center;
  border-radius: 12rpx;
  display: flex;
  font-size: 28rpx;
  height: 56rpx;
  justify-content: center;
  margin-right: 16rpx;
  width: 56rpx;
}

.contact-icon.phone {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
}

.contact-icon.wechat {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
}

.contact-icon.feedback {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
}

.contact-info {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.contact-label {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.contact-value {
  color: #999;
  font-size: 24rpx;
}

.contact-arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 版权信息 */
.copyright {
  align-items: center;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0;
}

.copyright-text {
  color: #bbb;
  font-size: 24rpx;
  line-height: 1.8;
}
