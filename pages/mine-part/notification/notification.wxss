.container {
  background-color: #f5f6f8;
  min-height: 100vh;
  padding: 24rpx;
}
.settings-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}
.card-header {
  padding: 28rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.settings-item.no-border {
  border-bottom: none;
}
.item-left {
  flex: 1;
}
.item-text {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.item-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}
.tips {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}
