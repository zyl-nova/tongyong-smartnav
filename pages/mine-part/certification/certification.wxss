.container {
  background-color: #f5f6f8;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 顶部提示 */
.tips-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #e8f4fd 0%, #d6ecfa 100%);
  padding: 24rpx 30rpx;
  margin: 0 0 24rpx 0;
}
.tips-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}
.tips-text {
  font-size: 26rpx;
  color: #1a73e8;
}

/* 卡片样式 */
.form-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}
.card-header {
  padding: 28rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 表单项 */
.form-item {
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.form-item.no-border {
  border-bottom: none;
}
.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-size: 28rpx;
}
.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}
.placeholder {
  color: #bbb;
}

/* 上传项 */
.upload-item {
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.upload-item.no-border {
  border-bottom: none;
}
.upload-header {
  margin-bottom: 20rpx;
}
.upload-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.upload-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* 上传区域 */
.upload-area {
  position: relative;
  width: 100%;
  height: 320rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  overflow: hidden;
}
.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.upload-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: #e8f4fd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}
.upload-icon {
  font-size: 48rpx;
  color: #1a73e8;
  font-weight: 300;
}
.upload-text {
  font-size: 26rpx;
  color: #999;
}
.preview-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.reupload-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.reupload-btn text {
  font-size: 24rpx;
  color: #fff;
}

/* 底部区域 */
.bottom-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #1a73e8 0%, #1557b0 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}
.submit-btn.disabled {
  background: #ccc;
}
.submit-btn::after {
  border: none;
}
.agreement-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}
.agreement-text .link {
  color: #1a73e8;
}
