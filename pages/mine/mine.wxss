/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx 24rpx 100rpx;
}

/* 用户卡片 */
.user-card {
  align-items: center;
  display: flex;
}

.avatar-wrap {
  position: relative;
}

.avatar {
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
}

.avatar-badge {
  align-items: center;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border: 4rpx solid #fff;
  border-radius: 50%;
  bottom: 0;
  color: #fff;
  display: flex;
  font-size: 20rpx;
  height: 32rpx;
  justify-content: center;
  position: absolute;
  right: 0;
  width: 32rpx;
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
}

.user-name-row {
  align-items: center;
  display: flex;
  margin-bottom: 8rpx;
}

.username {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

.cert-tag {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
}

.cert-tag.certified {
  background: rgba(82, 196, 26, 0.8);
}

.phone {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.qrcode-btn {
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  height: 72rpx;
  justify-content: center;
  width: 72rpx;
}

.qrcode-btn text {
  font-size: 32rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -60rpx;
  padding: 0 24rpx 40rpx;
}

/* 车辆卡片 */
.vehicle-card {
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.15);
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.vehicle-left {
  align-items: center;
  display: flex;
}

.vehicle-icon-wrap {
  align-items: center;
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-radius: 16rpx;
  display: flex;
  height: 80rpx;
  justify-content: center;
  margin-right: 20rpx;
  width: 80rpx;
}

.vehicle-icon {
  height: 48rpx;
  width: 48rpx;
}

.vehicle-info {
  display: flex;
  flex-direction: column;
}

.vehicle-plate {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.vehicle-type {
  color: #999;
  font-size: 24rpx;
}

.vehicle-right {
  align-items: center;
  display: flex;
}

.vehicle-manage {
  color: #1890ff;
  font-size: 26rpx;
  margin-right: 8rpx;
}

.vehicle-arrow {
  color: #ccc;
  font-size: 26rpx;
}

/* 快捷功能 */
.quick-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  margin-bottom: 24rpx;
  padding: 28rpx 16rpx;
}

.quick-item {
  align-items: center;
  display: flex;
  flex: 1;
  flex-direction: column;
}

.quick-icon-wrap {
  align-items: center;
  border-radius: 20rpx;
  display: flex;
  height: 88rpx;
  justify-content: center;
  margin-bottom: 12rpx;
  width: 88rpx;
}

.quick-icon-wrap.appointment {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
}

.quick-icon-wrap.violation {
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
}

.quick-icon-wrap.info {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
}

.quick-icon-wrap.history {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
}

.quick-icon {
  height: 44rpx;
  width: 44rpx;
}

.quick-text {
  color: #666;
  font-size: 24rpx;
}

/* 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.menu-item {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 28rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-left {
  align-items: center;
  display: flex;
}

.menu-icon-wrap {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
}

.menu-text {
  color: #333;
  font-size: 30rpx;
}

.menu-arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 退出登录 */
.logout-btn {
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  padding: 28rpx;
}

.logout-btn text {
  color: #f5222d;
  font-size: 30rpx;
  font-weight: 500;
}
