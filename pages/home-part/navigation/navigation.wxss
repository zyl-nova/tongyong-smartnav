/* 页面容器 */
.container {
  background: #f5f7fa;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 统计头部 */
.stats-header {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  display: flex;
  justify-content: space-around;
  padding: 32rpx 24rpx;
}

.stat-item {
  align-items: center;
  display: flex;
  flex: 1;
  flex-direction: column;
}

.stat-value {
  color: #fff;
  font-size: 44rpx;
  font-weight: 600;
}

.stat-item.warning .stat-value {
  color: #ffc53d;
}

.stat-item.danger .stat-value {
  color: #ff4d4f;
}

.stat-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
}

.stat-divider {
  background: rgba(255, 255, 255, 0.2);
  height: 60rpx;
  width: 1rpx;
}

/* Tab容器 */
.tab-container {
  background: #fff;
  padding: 16rpx 24rpx;
}

.tab-bar {
  background: #f5f7fa;
  border-radius: 16rpx;
  display: flex;
  padding: 6rpx;
}

.tab-item {
  align-items: center;
  border-radius: 12rpx;
  color: #666;
  display: flex;
  flex: 1;
  font-size: 26rpx;
  justify-content: center;
  padding: 18rpx 0;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-weight: 500;
}

/* 地图区域 */
.map-section {
  height: 500rpx;
  position: relative;
  width: 100%;
}

.nav-map {
  height: 100%;
  width: 100%;
}

.map-controls {
  bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: absolute;
  right: 24rpx;
}

.control-btn {
  align-items: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  font-size: 32rpx;
  height: 72rpx;
  justify-content: center;
  width: 72rpx;
}

.control-btn:active {
  background: #f5f5f5;
}

/* 车辆信息卡片 */
.vehicle-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin: 24rpx;
  padding: 28rpx;
}

.vehicle-header {
  align-items: center;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.vehicle-plate-tag {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
}

.vehicle-status {
  border-radius: 20rpx;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
}

.vehicle-status.online {
  background: #f6ffed;
  color: #52c41a;
}

.vehicle-details {
  border-bottom: 1rpx dashed #f0f0f0;
  padding-bottom: 20rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
}

.detail-label {
  color: #999;
  font-size: 26rpx;
}

.detail-value {
  color: #333;
  font-size: 26rpx;
}

.analysis-box {
  background: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding: 16rpx;
}

.analysis-text {
  color: #d48806;
  font-size: 24rpx;
  line-height: 1.6;
}

/* 预警信息 */
.alerts-section {
  padding: 0 24rpx 24rpx;
}

.section-header {
  align-items: center;
  display: flex;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  color: #333;
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
}

.alert-count {
  background: #f5222d;
  border-radius: 20rpx;
  color: #fff;
  font-size: 22rpx;
  min-width: 36rpx;
  padding: 4rpx 12rpx;
  text-align: center;
}

.alert-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.alert-card {
  background: #fff;
  border-left: 6rpx solid #faad14;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
}

.alert-card.high {
  border-left-color: #f5222d;
}

.alert-card.medium {
  border-left-color: #faad14;
}

.alert-card.low {
  border-left-color: #1890ff;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.alert-title {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.alert-time {
  color: #999;
  font-size: 24rpx;
}

.alert-content {
  color: #666;
  display: block;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.alert-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  border-radius: 24rpx;
  font-size: 24rpx;
  padding: 0 24rpx;
}

.action-btn.confirm {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
}

.action-btn.dismiss {
  background: #f5f5f5;
  color: #666;
}

.action-btn::after {
  border: none;
}
