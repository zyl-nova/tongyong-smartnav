/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部警示区 */
.header-bg {
  align-items: center;
  background: linear-gradient(135deg, #f5222d 0%, #ff4d4f 100%);
  display: flex;
  flex-direction: column;
  padding: 60rpx 32rpx 100rpx;
}

.warning-icon-wrap {
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  height: 120rpx;
  justify-content: center;
  margin-bottom: 20rpx;
  width: 120rpx;
}

.warning-icon {
  font-size: 60rpx;
}

.header-title {
  color: #fff;
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -60rpx;
  padding: 0 24rpx 40rpx;
}

/* 位置卡片 */
.location-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.location-header {
  align-items: center;
  display: flex;
  margin-bottom: 12rpx;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.location-label {
  color: #999;
  font-size: 26rpx;
}

.location-text {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

/* 区块卡片 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.section-header {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

/* 事故类型网格 */
.type-grid {
  display: grid;
  gap: 20rpx;
  grid-template-columns: 1fr 1fr;
}

.type-item {
  align-items: center;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  padding: 28rpx 20rpx;
  transition: transform 0.2s;
}

.type-item:active {
  transform: scale(0.95);
}

.type-item.leak {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border: 2rpx solid #91d5ff;
}

.type-item.fire {
  background: linear-gradient(135deg, #fff2e8 0%, #ffd8bf 100%);
  border: 2rpx solid #ffbb96;
}

.type-item.crash {
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
  border: 2rpx solid #ffa39e;
}

.type-item.other {
  background: linear-gradient(135deg, #f9f0ff 0%, #efdbff 100%);
  border: 2rpx solid #d3adf7;
}

.type-icon-wrap {
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  height: 80rpx;
  justify-content: center;
  margin-bottom: 16rpx;
  width: 80rpx;
}

.type-emoji {
  font-size: 40rpx;
}

.type-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.type-desc {
  color: #999;
  font-size: 22rpx;
}

/* 联系人列表 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  display: flex;
  padding: 20rpx;
}

.contact-item:active {
  background: #f0f0f0;
}

.contact-avatar {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 50%;
  color: #fff;
  display: flex;
  flex-shrink: 0;
  font-size: 28rpx;
  font-weight: 600;
  height: 72rpx;
  justify-content: center;
  margin-right: 20rpx;
  width: 72rpx;
}

.contact-info {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.contact-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.contact-phone {
  color: #999;
  font-size: 24rpx;
}

.call-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 24rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
}

/* 提示卡片 */
.tips-card {
  background: linear-gradient(135deg, #fffbe6 0%, #fff1b8 100%);
  border: 2rpx solid #ffe58f;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.tips-header {
  align-items: center;
  display: flex;
  margin-bottom: 16rpx;
}

.tips-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.tips-title {
  color: #d48806;
  font-size: 28rpx;
  font-weight: 600;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-item {
  color: #874d00;
  font-size: 24rpx;
  line-height: 1.6;
}

/* 一键报警按钮 */
.emergency-btn {
  align-items: center;
  background: linear-gradient(135deg, #f5222d 0%, #ff4d4f 100%);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(245, 34, 45, 0.4);
  color: #fff;
  display: flex;
  font-size: 32rpx;
  font-weight: 600;
  height: 100rpx;
  justify-content: center;
  margin-top: 20rpx;
}

.emergency-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
}
