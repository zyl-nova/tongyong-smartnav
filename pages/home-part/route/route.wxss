/* 页面容器 */
.container {
  background: #f5f7fa;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx 24rpx 80rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.header-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 搜索框 */
.search-box {
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  display: flex;
  padding: 0 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 80rpx;
}

.clear-btn {
  color: #999;
  font-size: 36rpx;
  padding: 0 12rpx;
}

/* 内容区域 */
.content-area {
  flex: 1;
  margin-top: -40rpx;
  padding: 0 24rpx;
}

/* Tab卡片 */
.tab-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 8rpx;
}

.tab-bar {
  display: flex;
}

.tab-item {
  align-items: center;
  border-radius: 16rpx;
  color: #666;
  display: flex;
  flex: 1;
  font-size: 26rpx;
  justify-content: center;
  padding: 20rpx 0;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-weight: 500;
}

/* 路线列表 */
.route-list {
  flex: 1;
  padding-bottom: 24rpx;
}

.route-card {
  align-items: center;
  background: #fff;
  border: 2rpx solid transparent;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  margin-bottom: 20rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.route-card.selected {
  background: linear-gradient(135deg, #f0f7ff 0%, #e6f4ff 100%);
  border-color: #1890ff;
}

.route-card:active {
  transform: scale(0.98);
}

.route-left {
  align-items: flex-start;
  display: flex;
  flex: 1;
}

.route-icon {
  align-items: center;
  border-radius: 16rpx;
  display: flex;
  flex-shrink: 0;
  font-size: 32rpx;
  height: 72rpx;
  justify-content: center;
  margin-right: 20rpx;
  width: 72rpx;
}

.route-icon.chemical {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
}

.route-icon.gas {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
}

.route-icon.special {
  background: linear-gradient(135deg, #f9f0ff 0%, #efdbff 100%);
}

.route-icon.default {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
}

.route-info {
  flex: 1;
}

.route-name-row {
  align-items: center;
  display: flex;
  margin-bottom: 8rpx;
}

.route-name {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 12rpx;
}

.current-tag {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
}

.route-desc {
  color: #999;
  display: block;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.route-tags {
  display: flex;
  gap: 12rpx;
}

.route-tag {
  background: #f5f5f5;
  border-radius: 6rpx;
  color: #666;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
}

.route-right {
  margin-left: 16rpx;
}

.nav-btn {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 20rpx;
  color: #fff;
  font-size: 22rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 20rpx;
}

.nav-btn::after {
  border: none;
}

/* 空状态 */
.empty-state {
  align-items: center;
  display: flex;
  flex-direction: column;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.reset-btn {
  background: #f5f5f5;
  border-radius: 24rpx;
  color: #666;
  font-size: 24rpx;
}

.reset-btn::after {
  border: none;
}

/* 底部确认栏 */
.bottom-bar {
  align-items: center;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
  padding: 20rpx 24rpx calc(20rpx + env(safe-area-inset-bottom));
}

.selected-info {
  display: none;
}

.selected-label {
  color: #999;
  display: block;
  font-size: 22rpx;
}

.selected-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.confirm-btn {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 44rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  height: 80rpx;
  text-align: center;
  width: 80%;
}

.confirm-btn::after {
  border: none;
}

/* 预约路线详情卡片 */
.reservation-route-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.route-detail-section {
  padding: 32rpx;
}

.route-point-item {
  display: flex;
  align-items: flex-start;
}

.point-marker {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.point-marker.start {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.point-marker.end {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.point-content {
  flex: 1;
}

.point-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.point-name {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.route-line-vertical {
  width: 4rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #52c41a 0%, #ff4d4f 100%);
  margin: 12rpx 0 12rpx 22rpx;
  border-radius: 2rpx;
}

.route-plan-section {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f5f5f5;
  background: #fafafa;
}

.plan-title {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.plan-content {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.route-actions {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 24rpx;
}

.action-btn-large {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
}

.action-btn-large::after {
  border: none;
}

.action-btn-large.primary {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
}

.action-btn-large.secondary {
  background: #f5f5f5;
  color: #666;
}

.action-btn-large .btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}
