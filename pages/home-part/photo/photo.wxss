/* 页面容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx 32rpx 100rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.header-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -60rpx;
  padding: 0 24rpx 40rpx;
}

/* 须知卡片 */
.tips-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.tips-header {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  align-items: flex-start;
  display: flex;
}

.tip-index {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 50%;
  color: #fff;
  display: flex;
  flex-shrink: 0;
  font-size: 20rpx;
  height: 32rpx;
  justify-content: center;
  margin-right: 12rpx;
  margin-top: 4rpx;
  width: 32rpx;
}

.tip-text {
  color: #666;
  font-size: 26rpx;
  line-height: 1.6;
}

/* 上传卡片 */
.upload-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.upload-header {
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
}

.upload-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.upload-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

.upload-grid {
  display: grid;
  gap: 20rpx;
  grid-template-columns: 1fr 1fr;
}

.upload-item {
  aspect-ratio: 4/3;
  border: 2rpx dashed #e8e8e8;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.upload-item:active {
  opacity: 0.8;
}

.preview-img {
  height: 100%;
  width: 100%;
}

.upload-placeholder {
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  width: 100%;
}

.placeholder-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.placeholder-text {
  color: #999;
  font-size: 24rpx;
}

.upload-tag {
  align-items: center;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 50%;
  bottom: 12rpx;
  color: #fff;
  display: flex;
  font-size: 24rpx;
  height: 40rpx;
  justify-content: center;
  position: absolute;
  right: 12rpx;
  width: 40rpx;
}

/* 进度卡片 */
.progress-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 28rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label {
  color: #333;
  font-size: 28rpx;
}

.progress-value {
  color: #1890ff;
  font-size: 28rpx;
  font-weight: 600;
}

.progress-bar {
  background: #f0f0f0;
  border-radius: 8rpx;
  height: 16rpx;
  overflow: hidden;
}

.progress-inner {
  background: linear-gradient(90deg, #1890ff 0%, #36cfc9 100%);
  height: 100%;
  transition: width 0.3s;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
}

.btn {
  align-items: center;
  border-radius: 44rpx;
  display: flex;
  flex: 1;
  font-size: 28rpx;
  height: 88rpx;
  justify-content: center;
}

.preview-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
}

.btn[disabled] {
  opacity: 0.5;
}

.btn::after {
  border: none;
}
