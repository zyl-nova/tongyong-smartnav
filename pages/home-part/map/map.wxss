/* 页面容器 */
.container {
  background: #f5f7fa;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 顶部信息栏 */
.header-bar {
  align-items: center;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  display: flex;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.header-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}

.update-time {
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
  margin-top: 4rpx;
}

.vehicle-count {
  align-items: baseline;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  display: flex;
  padding: 12rpx 24rpx;
}

.count-value {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
}

.count-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 筛选栏 */
.filter-container {
  background: #fff;
  padding: 16rpx 0;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 24rpx;
}

.filter-item {
  background: #f5f7fa;
  border-radius: 28rpx;
  color: #666;
  font-size: 26rpx;
  padding: 14rpx 28rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-weight: 500;
}

/* 地图容器 */
.map-container {
  flex: 1;
  position: relative;
}

.map {
  height: 100%;
  width: 100%;
}

/* 地图控制按钮 */
.map-controls {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: absolute;
  right: 24rpx;
  top: 24rpx;
}

.control-btn {
  align-items: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  font-size: 32rpx;
  height: 80rpx;
  justify-content: center;
  width: 80rpx;
}

.control-btn:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

/* 图例 */
.map-legend {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 24rpx;
  left: 24rpx;
  padding: 16rpx 24rpx;
  position: absolute;
}

.legend-item {
  align-items: center;
  display: flex;
}

.legend-dot {
  border-radius: 50%;
  height: 20rpx;
  margin-right: 8rpx;
  width: 20rpx;
}

.legend-dot.normal {
  background: #1890ff;
}

.legend-dot.danger {
  background: #f5222d;
}

.legend-item text {
  color: #666;
  font-size: 22rpx;
}

/* 底部操作栏 */
.bottom-bar {
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  padding: 16rpx 0 calc(16rpx + env(safe-area-inset-bottom));
}

.action-item {
  align-items: center;
  display: flex;
  flex: 1;
  flex-direction: column;
}

.action-item:active {
  opacity: 0.7;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.action-item text {
  color: #666;
  font-size: 22rpx;
}
